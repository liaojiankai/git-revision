{
  "name": "git-revision",
  "version": "0.0.4",
  "description": "",
  "main": "dist/index.js",
  "dependencies": {},
  "author": "ernan <ernan@global.com>",
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  }
}